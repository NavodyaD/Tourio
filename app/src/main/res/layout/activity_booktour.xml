<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

     <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginBottom="16dp"
        android:background="@color/black"
        android:layout_marginTop="-28dp"
        app:cardUseCompatPadding="false">

        <ImageView
            android:layout_width="395dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/travelbooking" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="30dp"
            android:paddingVertical="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOUR BOOK"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:lineHeight="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:text="Wherever you go becomes a part of you somehow."
                android:layout_gravity="center"
                android:textSize="15dp"
                android:lineHeight="30dp"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

     <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

             <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Description"
                android:inputType="text" />

            <EditText
                android:id="@+id/dateInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Date"
                android:inputType="date" />

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <RadioButton
                        android:id="@+id/destination1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/destinationInput1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Destination 1"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A beautiful and vibrant destination."
                            android:textSize="14sp"
                            android:textColor="#888888"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/destinationIcon1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_map"
                        android:contentDescription="Destination 1 Icon" />
                </LinearLayout>

                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <RadioButton
                        android:id="@+id/destination2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/destinationInput2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Destination 2"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Explore the beauty of this destination."
                            android:textSize="14sp"
                            android:textColor="#888888"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/destinationIcon2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_map"
                        android:contentDescription="Destination 2 Icon" />
                </LinearLayout>

                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <RadioButton
                        android:id="@+id/destination3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/destinationInput3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Destination 3"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A tranquil and peaceful getaway."
                            android:textSize="14sp"
                            android:textColor="#888888"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/destinationIcon3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_map"
                        android:contentDescription="Destination 3 Icon" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

     <RadioGroup
        android:id="@+id/optionsGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="wrap_content"
            android:text="Option 1"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 2" />

        <RadioButton
            android:id="@+id/option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 3" />
    </RadioGroup>

     <Button
        android:id="@+id/bookTourButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Tour"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="16dp"
         android:layout_marginBottom="69dp"/>

</LinearLayout>
