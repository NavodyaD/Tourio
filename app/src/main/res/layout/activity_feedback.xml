<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feedbackpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="40dp"
    android:layout_marginVertical="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Feedback"
            android:textSize="28dp"
            android:textStyle="bold"
            android:id="@+id/FeedbackTitle"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Give Your feedback on tour"
            android:textSize="16dp"
            android:id="@+id/subText"
            android:layout_below="@+id/FeedbackTitle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How much you enjoyed the tour?"
            android:layout_below="@+id/RatingBar"
            android:textSize="18sp"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RatingBar"
            android:numStars="5"
            android:stepSize="1"
            android:layout_centerHorizontal="true"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write your feedback on the tour"
            android:id="@+id/reviewText"
            android:layout_below="@+id/RatingBar"
            android:textSize="18sp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|start"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:id="@+id/review"
            android:layout_below="@+id/reviewText"
            android:background="@drawable/shape_rounded_button"
            android:lines="6"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:hint="Write your feedback" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>


        <Button
            android:id="@+id/sendFeedbackButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rounded_button"
            android:backgroundTint="#FFFF00"
            android:theme="@null"
            android:text="Send Feedback"
            android:textSize="18sp"
            android:textColor="@color/white"
            />

    </LinearLayout>



</RelativeLayout>