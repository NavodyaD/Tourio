<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="220dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/preDefTourCardImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:padding="2dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:background="@drawable/shape_rounded_button"
            android:src="@drawable/ic_bookmark"
            app:tint="@color/app_primary_color" />

        <!-- Title Below the Image -->
        <TextView
            android:id="@+id/preDefTourCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/preDefTourCardImage"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/preDefTourCardDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/preDefTourCardTitle"
            android:textSize="11sp"
            android:textColor="#888888"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/preDefTourCardPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/preDefTourCardDes"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#1D1D1D" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>